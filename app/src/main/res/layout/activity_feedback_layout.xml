<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title"/>

    <ListView
        android:id="@+id/lv_price_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/line_color"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="245dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/bg_content_corner_3"
            android:gravity="center|left"
            android:hint="您想说什么？请在此输入……"
            android:paddingLeft="10dp"
            android:textColor="@color/black2"
            android:textColorHint="@color/gray21"
            android:textSize="@dimen/ts_normal_second"/>

        <TextView
            android:id="@+id/tv_sendmsg"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_content_corner_3_gray9"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/black3"
            android:textSize="@dimen/ts_normal_forth"/>
    </LinearLayout>
</LinearLayout>