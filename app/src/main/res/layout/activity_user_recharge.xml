<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray2"
              android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title"/>

    <View
        style="@style/line_fill_gray9_style"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/recharge"
            android:textColor="@color/black1"
            android:textSize="@dimen/ts_normal_forth"/>

        <TextView
            android:id="@+id/tv_recharge_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/red_65"
            android:textSize="@dimen/ts_normal_forth"
            android:textStyle="bold"/>
    </RelativeLayout>

    <View style="@style/line_fill_gray9_style"/>

    <RelativeLayout
        android:id="@+id/rl_recharge_wx"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_pay_wx"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/wx_recharge"
            android:textColor="@color/black2"
            android:textSize="@dimen/ts_normal_second"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/icon_step_next"
            android:gravity="center"/>
    </RelativeLayout>

    <View style="@style/line_fill_gray9_style"/>

    <View
        style="@style/line_fill_gray9_style"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/other_pay"
        android:textColor="@color/black1"
        android:textSize="@dimen/ts_normal_forth"/>

    <View style="@style/line_fill_gray9_style"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_recharge_zfb"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_pay_zfb"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/zfb_recharge"
                android:textColor="@color/black2"
                android:textSize="@dimen/ts_normal_second"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_step_next"
                android:gravity="center"/>
        </RelativeLayout>

        <View style="@style/line_left_ten_style"/>

        <RelativeLayout
            android:id="@+id/rl_recharge_bfb"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_pay_bfb"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="@string/bfb_recharge"
                android:textColor="@color/black2"
                android:textSize="@dimen/ts_normal_second"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/icon_step_next"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_fill_gray9_style"/>

</LinearLayout>