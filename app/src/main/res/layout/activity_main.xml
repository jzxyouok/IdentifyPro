<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_footer"
        android:layout_below="@+id/layout_title"/>
    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black5">

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_navigation_footer_item"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/selector_tab_home"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="5dp"
                android:text="@string/home"
                android:textColor="@drawable/selector_text_color_tab"
                android:textSize="@dimen/ts_normal_small"/>

            <TextView
                android:id="@+id/tv_discovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_navigation_footer_item"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/selector_tab_discovery"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:paddingRight="40dp"
                android:paddingTop="5dp"
                android:text="@string/discovery"
                android:textColor="@drawable/selector_text_color_tab"
                android:textSize="@dimen/ts_normal_small"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_navigation_footer_item"
                    android:drawablePadding="4dp"
                    android:drawableTop="@drawable/selector_tab_user"
                    android:paddingTop="5dp"
                    android:text="@string/me"
                    android:gravity="center"
                    android:textColor="@drawable/selector_text_color_tab"
                    android:textSize="@dimen/ts_normal_small"/>

                <TextView
                    android:id="@+id/tv_bubble_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bubble_shape"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ts_normal_littler"
                    android:text="30"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
