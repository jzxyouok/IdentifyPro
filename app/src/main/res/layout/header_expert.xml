<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/black3"
        android:text="@string/no_expert_data"/>

    <View style="@style/line_fill_white_style"/>

    <View style="@style/line_bold_ten_style"/>

    <View style="@style/line_fill_white_style"/>

    <RelativeLayout
        android:id="@+id/rl_tui_expert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_expert_tui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/icon_line_vertical"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/experts_recommend"
            android:textColor="@color/gray10"
            android:textSize="@dimen/ts_normal"/>

        <View
            style="@style/line_fill_white_style"
            android:layout_below="@+id/tv_expert_tui"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_expert_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/icon_line_vertical"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/expert_detail"
            android:textColor="@color/gray10"
            android:textSize="@dimen/ts_normal"/>

        <View
            style="@style/line_fill_white_style"
            android:layout_below="@+id/tv_expert"/>
    </RelativeLayout>
</LinearLayout>