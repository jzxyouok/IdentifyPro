<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content_corner_9"
                android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/please_select_collection_type"
                android:textColor="@color/black1"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/identify_line"/>

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rv_collection_type"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingBottom="14dp"-->
            <!--android:paddingLeft="23dp"-->
            <!--android:paddingTop="16dp"-->
            <!--android:scrollbars="none"-->
            <!--android:background="@color/red"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/identify_paint_icon"
            android:gravity="center"
            android:paddingLeft="17dp"
            android:layout_marginRight="23dp"
            android:drawableLeft="@drawable/identify_paint_icon_name"/>

            <TextView
                android:id="@+id/tv_china"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_china_icon"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:drawableLeft="@drawable/identify_china_icon_name"/>
            <TextView
                android:id="@+id/tv_sundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_sundry_icon"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/identify_sundry_icon_name"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_jade_icon"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/identify_jade_icon_name"/>
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_money_icon"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/identify_money_icon_name"/>
            <TextView
                android:id="@+id/tv_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/identify_bronze_icon"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:layout_marginLeft="23dp"
                android:drawableLeft="@drawable/identify_bronze_icon_name"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>