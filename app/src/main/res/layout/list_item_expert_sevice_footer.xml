<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_custom_service_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/custom_service"
            android:textColor="@color/black1"
            android:textSize="@dimen/ts_normal_one"/>

        <TextView
            android:id="@+id/tv_custom_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/tv_custom_service_txt"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/icon_step_next"
            android:gravity="center|left"
            android:textSize="@dimen/ts_normal_small"/>
    </RelativeLayout>
</LinearLayout>
